<section id="three" class="wrapper">
    <div class="inner">
        <header class="align-center">
            <h2>통계</h2>
            <p>사용자가 소유한 쓰레기통의 최근 통계량을 보여줍니다. </p>
        </header>

        <div class="row">
            <div class="col col">
                <div class="card bg-danger text-white mb-4">
                    <div class="card-body">All Device</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="/statistics">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
            <div class="col col">
                <div class="card bg-danger text-white mb-4">
                    <div class="card-body">Device1</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="/statistics/device1">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
            <div class="col col">
                <div class="card bg-danger text-white mb-4">
                    <div class="card-body">Device2</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="/statistics/device2">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
            <div class="col col">
                <div class="card bg-danger text-white mb-4">
                    <div class="card-body">Device3</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="/statistics/device3">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
            <div class="col col">
                <div class="card bg-danger text-white mb-4">
                    <div class="card-body">Device4</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="/statistics/device4">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
        </div>
        </header>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    <!--<h1 class="mt-4">Dashboard</h1>-->
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item active">Device2</li>
                    </ol>
                    <div class="row">
                        <div class="col-xl-6">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <i class="fas fa-chart-area mr-1"></i>
                                    Area Chart Example
                                </div>
                                <div class="card-body"><canvas id="myChartOne" width="100%" height="100"></canvas></div>
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <i class="fas fa-chart-bar mr-1"></i>
                                    Bar Chart Example
                                </div>
                                <div class="card-body"><canvas id="myChartTwo" width="100%" height="100"></canvas></div>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table mr-1"></i>
                            DataTable Example
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                    <tr>
                                        <th>id</th>
                                        <th>date_time</th>
                                        <th>loadage</th>
                                    </tr>
                                    </thead>
                                    <tfoot>
                                    <tr>
                                        <th>id</th>
                                        <th>date_time</th>
                                        <th>loadage</th>
                                    </tr>
                                    </tfoot>
                                    <tbody>
                                    {{#device2}}
                                        <tr>
                                            <td>{{id}}</td>
                                            <td>{{date_time}}</td>
                                            <td>{{loadage}}%</td>
                                        </tr>
                                    {{/device2}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script>

        let device_2_ID = [];
        let device_2_DATE_TIME = [];
        let device_2_ldg = [];

            {{#device2}}
            device_2_ID.push("{{id}}")
            device_2_DATE_TIME.push("{{date_time}}")
            device_2_ldg.push(parseInt({{loadage}}))
            {{/device2}}

        let myChartOne = document.getElementById('myChartOne').getContext('2d');
        let myChartTwo = document.getElementById('myChartTwo').getContext('2d');
        let barChart = new Chart(myChartOne,{
            type : 'line', //pie, line, doughnut, polarArea
            data : {
                labels : device_2_DATE_TIME,
                datasets : [{
                    label : '적재량',
                    data : device_2_ldg
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            min: 0,
                            max : 100
                        }
                    }]
                }
            }
        });
        let barChartTwo = new Chart(myChartTwo,{
            type : 'bar', //pie, line, doughnut, polarArea
            data : {
                labels : ['1월', '2월', '3월', '4월','5월','6월','7월','8월','9월','10월','11월','12월'],
                datasets : [{
                    label : '수거량(kg)',
                    data : [
                        100,150,300,350,500,700,800,950,750,500,300,50
                    ]
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            min: 0,
                            max : 1000
                        }
                    }]
                }
            }
        });


    </script>

</section>

