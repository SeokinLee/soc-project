    <!-- Three -->
<section id="three" class="wrapper">
    <div class="inner">
        <header class="align-center">
            <h2>CLEANBOX LIST</h2>
            <p><a href="/posts/save/en" role="button" class="btn btn-primary" disabled>CLEANBOX registration</a></p>
        </header>
        <!-- 목록 출력 영역 -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table mr-1"></i>
                CLEANBOX LIST
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead class="thead-strong">
                        <tr>
                            <!--<th>쓰레기통 번호</th>-->
                            <th>CLEANBOX Name</th>
                            <th>Serial Number</th>
                            <th>Location</th>
                            <th>Loadage</th>
                            <th>Modified date</th>
                            </tr>
                            </thead>
                            <tbody id="tbody">
                            {{#posts}}
                                <tr>
                                    {{!<td>{{id}</td>}}
                                    <td><a href="/posts/update/{{id}}/en">{{device_nm}}</a></td>
                                    <td>{{serial_no}}</td>
                                    <td>{{address}}</td>
                                    <!--<td>lat: {latitude}}<br>lng: {longitude}}</td>-->
                                    <td>{{current_loadage}}%</td>
                                    <td>{{modifiedDate}}</td>
                                </tr>
                            {{/posts}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

    </section>

