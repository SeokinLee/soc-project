<!-- Three -->
<section id="three" class="wrapper">
    <div class="inner">
        <header class="align-center">
            <h2>statistics</h2>
            <p>Shows the latest statistics for device owned by the user.</p>
        </header>

        <div class="row">
            <div class="col col">
                <div class="card bg-success text-white mb-4">
                    <div class="card-body">All Device</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="/statistics/en">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
            <div class="col col">
                <div class="card bg-primary text-white mb-4">
                    <div class="card-body">Washington Square Park</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="/statistics/device1/en">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
            <div class="col col">
                <div class="card bg-info text-white mb-4">
                    <div class="card-body">Chrysler Building</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="/statistics/device2/en">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
            <div class="col col">
                <div class="card bg-warning text-white mb-4">
                    <div class="card-body">Brooklyn Botanic Garden</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="/statistics/device3/en">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
            <div class="col col">
                <div class="card bg-danger text-white mb-4">
                    <div class="card-body">John F. Kennedy Airport</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="/statistics/device4/en">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
        </div>


        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    <!--<h1 class="mt-4">Dashboard</h1>-->
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item active">Washington Square Park</li>
                    </ol>
                    <div class="row">
                        <div class="col-xl-6">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <i class="fas fa-chart-area mr-1"></i>
                                    Loadage by date
                                </div>
                                <div class="card-body"><canvas id="myChartOne" width="100%" height="100"></canvas></div>
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <i class="fas fa-chart-bar mr-1"></i>
                                    Loadage by collection
                                </div>
                                <div class="card-body"><canvas id="myChartTwo" width="100%" height="100"></canvas></div>
                            </div>
                        </div>
                    </div>


                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table mr-1"></i>
                            Device log
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>DateTime</th>
                                        <th>Loadage</th>
                                    </tr>
                                    </thead>
                                    <tfoot>
                                    <tr>
                                        <th>ID</th>
                                        <th>DateTime</th>
                                        <th>Loadage</th>
                                    </tr>
                                    </tfoot>
                                    <tbody>
                                    {{#device1}}
                                        <tr>
                                            <td>{{id}}</td>
                                            <td>{{logtime}}</td>
                                            <td>{{loadage}}%</td>
                                        </tr>
                                    {{/device1}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script>

        let device_1_ID = [];
        let device_1_DATE_TIME = [];
        let device_1_ldg = [];

            {{#device1}}
            device_1_ID.push("{{id}}")
            device_1_DATE_TIME.push("{{logtime}}")
            device_1_ldg.push(parseInt({{loadage}}))
            {{/device1}}

        let pickup = [0,0,0,0,0];
        let index =0;
        for(let i = 0; i < device_1_ldg.length/42; i++)
        {
            for(let j = 0; j < device_1_ldg.length/5; j++)
            {
                if(device_1_ldg[index+1] ==0)
                {
                    pickup[i]+=device_1_ldg[index];
                }
                index++;
            }
        }


        let myChartOne = document.getElementById('myChartOne').getContext('2d');
        let myChartTwo = document.getElementById('myChartTwo').getContext('2d');
        let barChart = new Chart(myChartOne,{
            type : 'line', //pie, line, doughnut, polarArea
            data : {
                labels : device_1_DATE_TIME,
                datasets : [{
                    label : 'loadage',
                    data : device_1_ldg,
                    backgroundColor:  "#007bff",
                    borderColor:  "#007bff",
                    fill: true,
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            min: 0,
                            max : 100
                        }
                    }]
                }
            }
        });
        let barChartTwo = new Chart(myChartTwo,{
            type : 'bar', //pie, line, doughnut, polarArea
            data : {
                labels : ['Week 1', 'Week 2', 'Week 3', 'Week 4','Week 5'],
                datasets : [{
                    label : 'collection(kg)',
                    data : pickup,
                    backgroundColor:  "#007bff",
                    borderColor:  "#007bff",
                    fill: true,
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            min: 0,
                            max : 1000
                        }
                    }]
                }
            }
        });



    </script>

</section>

